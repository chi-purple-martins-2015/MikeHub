<div class="article_new">

<%= form_tag do %>
  <%= form_tag("/articles", method: "post") do %>
    <%= label_tag :article, "Title" %>
    <%= text_field(:article, :title, size: 35)%>
    <%= label_tag :article, "Subtitle" %>
    <%= text_field(:article,:subtitle, size: 30)  %>
    <%= label_tag :article, "Content" %>
    <%= text_area(:article, :content, cols: 40, rows: 30)%>
    <%= submit_tag "Submit" %>
  <% end %>
<% end %>
</div>