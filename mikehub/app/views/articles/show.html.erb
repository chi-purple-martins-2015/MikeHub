<div class="article_show">
  <% if logged_in? %>
    <%= link_to 'Edit', edit_article_path(@article) %>
    <%= link_to 'Delete', article_delete_path(@article), method: :delete, data:{confirm: 'Are you sure you want to delete this user?'} %>
  <% end %>


  <h3><%= @article.title %></h3>
  <h2><%= @article.subtitle %></h2>
  <p><%= @article.content.html_safe %></p>
</div>