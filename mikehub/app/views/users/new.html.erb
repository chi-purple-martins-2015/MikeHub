<h2>Sign Up</h2>
<div class="user-form-div">
  <%= form_for @user, :url => users_create_path do |f| %>
    <p><%= f.label :first_name %>:
    <%= f.text_field :first_name %></p>
    <p><%= f.label :last_name %>:&nbsp;
    <%= f.text_field :last_name %></p>
    <p><%= f.label :email %>:&nbsp; &nbsp; &nbsp; &nbsp; &nbsp;
    <%= f.text_field :email %></p>
    <p><%= f.label :password %>:&nbsp; &nbsp;
    <%= f.text_field :password %></p>
    <p><%= f.submit "Register" %></p>
  <% end %>
</div>